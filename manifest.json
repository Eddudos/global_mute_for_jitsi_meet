{
    "name": "Global Mute for Jitsi Meet",
    "description": "Global hotkey to toggle microphone in Jitsi Meet.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "toggle-mic": {
            "suggested_key": {
                "default": "Ctrl+Shift+5"
            },
            "description": "Toggle microphone in Jitsi"
        },
        "switch-to-meet": {
            "suggested_key": {
                "default": "Ctrl+Shift+2"
            },
            "description": "Switch to active Jitsi tab"
        }
    }
}